{
  "name": "bachillerato-heroes-patria-website",
  "version": "1.0.0",
  "description": "Sitio web oficial del Bachillerato General Estatal Héroes de la Patria",
  "main": "server/server.js",
  "scripts": {
    "start": "cd server && npm start",
    "dev": "cd server && npm run dev",
    "build": "echo 'Static files ready'",
    "install-server": "cd server && npm install",
    "docs:install": "node scripts/docs-automation/master-docs.js --install",
    "docs:update": "node scripts/docs-automation/master-docs.js --update",
    "docs:maps": "node scripts/docs-automation/master-docs.js --maps",
    "docs:cleanup": "node scripts/docs-automation/master-docs.js --cleanup",
    "docs:cleanup-dry": "node scripts/docs-automation/master-docs.js --cleanup --dry-run",
    "docs:full": "node scripts/docs-automation/master-docs.js --full",
    "lint:js": "eslint js/**/*.js --fix",
    "lint:html": "htmlhint *.html",
    "lint:css": "stylelint css/**/*.css --fix",
    "format": "prettier --write js/**/*.js css/**/*.css *.html",
    "fix-all": "npm run lint:js && npm run lint:css && npm run format",
    "check-errors": "npm run lint:js && npm run lint:html && npm run lint:css"
  },
  "keywords": [
    "education",
    "bachillerato",
    "website",
    "node.js"
  ],
  "author": "BGE Héroes de la Patria",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "archiver": "^7.0.1",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.3",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.6",
    "openai": "^4.104.0",
    "pg": "^8.11.3",
    "sharp": "^0.34.4",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "web-push": "^3.6.7",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "eslint": "^9.36.0",
    "glob": "^10.4.5",
    "htmlhint": "^1.7.1",
    "jshint": "^2.13.6",
    "prettier": "^3.6.2",
    "stylelint": "^16.24.0"
  }
}
