{
  "name": "heroes-patria-backend",
  "version": "1.0.0",
  "description": "Backend API para Bachillerato General Estatal Héroes de la Patria",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "https": "node https-server.js",
    "https:dev": "nodemon https-server.js",
    "https:redirect": "node https-server.js --redirect",
    "generate-certs": "node -e \"require('./config/ssl').getSSLManager()\"",
    "migrate": "node migrations/migrate.js",
    "seed": "node seeds/seed.js",
    "setup": "npm run migrate && npm run seed",
    "migrate:json": "node scripts/migrate-json-to-mysql.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "archiver": "^7.0.1",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.3",
    "node-cron": "^4.2.1",
    "pg": "^8.11.3",
