# ============================================
# CONFIGURACIÓN DE AMBIENTE - BACKEND API
# Bachillerato General Estatal Héroes de la Patria
# ============================================

# AMBIENTE
NODE_ENV=development
PORT=3000

# ============================================
# BASE DE DATOS MYSQL
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=heroes_patria_db
DB_USER=your_username
DB_PASSWORD=your_password
DB_CONNECTION_LIMIT=100
DB_TIMEOUT=60000

# ============================================
# SEGURIDAD JWT
# ============================================
# Genera una clave secreta segura con: openssl rand -base64 64
JWT_SECRET=your_super_secure_jwt_secret_here_min_32_chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# ENCRIPTACIÓN DE CONTRASEÑAS
# ============================================
BCRYPT_ROUNDS=12

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CORS CONFIGURATION
# ============================================
# Separar múltiples orígenes con comas
ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8081,https://sacrint.github.io

# ============================================
# CONFIGURACIÓN DE EMAIL (para notificaciones)
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@heroespatria.edu.mx

# ============================================
# CONFIGURACIÓN DE LOGS
# ============================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ============================================
# CONFIGURACIÓN DE UPLOADS
# ============================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ============================================
# CONFIGURACIÓN DEL CHATBOT
# ============================================
CHATBOT_MAX_RESPONSE_LENGTH=1000
CHATBOT_RESPONSE_DELAY=500
CHATBOT_ANALYTICS_ENABLED=true

# ============================================
# CONFIGURACIÓN DE DESARROLLO
# ============================================
# Solo en desarrollo
SWAGGER_ENABLED=true
DEBUG_SQL=false
SEED_ADMIN_EMAIL=admin@heroespatria.edu.mx
SEED_ADMIN_PASSWORD=Heroes2024!

# ============================================
# CONFIGURACIÓN DE REPORTES
# ============================================
REPORTS_ENABLED=true
REPORTS_MAX_RECORDS=10000
REPORTS_CACHE_DURATION=1800