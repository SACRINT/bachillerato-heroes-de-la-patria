              <a href={`tel:${contactInfo.phone}`} class="text-gray-300 hover:text-primary-400 text-sm transition-colors duration-200">
                {contactInfo.phone}
              </a>
            </div>
          </div>

          <!-- Email -->
          <div class="flex items-start space-x-3">
            <i class="fas fa-envelope text-primary-400 text-sm mt-1 flex-shrink-0"></i>
            <div>
              <p class="text-xs font-semibold text-secondary-400 mb-1">Email:</p>
              <a 
                href={`mailto:${contactInfo.email}`} 
                class="text-gray-300 hover:text-primary-400 text-sm transition-colors duration-200 break-all"
              >
                {contactInfo.email}
              </a>
            </div>
          </div>

          <!-- Schedule -->
          <div class="flex items-start space-x-3">
            <i class="fas fa-clock text-primary-400 text-sm mt-1 flex-shrink-0"></i>
            <div>
              <p class="text-xs font-semibold text-secondary-400 mb-1">Horario:</p>
              <p class="text-gray-300 text-sm">{contactInfo.schedule}</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-gray-700 my-8"></div>

    <!-- Bottom section -->
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
