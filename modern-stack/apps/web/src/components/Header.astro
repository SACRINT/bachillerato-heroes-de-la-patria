---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-md shadow-lg border-b border-gray-200/20 dark:bg-gray-900/95 dark:border-gray-700/20">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" role="navigation" aria-label="Navegación principal">
    <div class="flex items-center justify-between h-16 lg:h-20">
      
      <!-- Logo y Nombre -->
      <div class="flex items-center">
        <a 
          href="/" 
          class="flex items-center space-x-3 group transition-all duration-300 hover:scale-105"
          aria-label="Inicio - Bachillerato Héroes de la Patria"
        >
          <!-- Logo -->
          <div class="relative">
            <div class="w-12 h-12 lg:w-14 lg:h-14 bg-gradient-to-br from-primary-500 to-primary-700 rounded-xl shadow-lg flex items-center justify-center group-hover:shadow-primary-500/25 transition-shadow duration-300">
              <span class="text-white font-bold text-lg lg:text-xl">BGE</span>
            </div>
            <!-- Glow effect -->
            <div class="absolute inset-0 bg-gradient-to-br from-primary-500 to-primary-700 rounded-xl opacity-0 group-hover:opacity-20 blur-xl transition-opacity duration-300"></div>
          </div>
          
          <!-- Texto del logo -->
          <div class="hidden sm:block">
            <div class="text-primary-700 dark:text-primary-400 font-bold text-sm lg:text-base leading-tight">
              Bachillerato General Estatal
            </div>
            <div class="text-secondary-600 dark:text-secondary-400 font-semibold text-xs lg:text-sm leading-tight">
              "Héroes de la Patria"
            </div>
          </div>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex lg:items-center lg:space-x-1">
        {navigationItems.map((item) => (
          <div class="relative group">
            <a
              href={item.href}
              class={`flex items-center px-3 py-2 rounded-lg text-sm font-medium transition-all duration-200 hover:bg-primary-50 dark:hover:bg-gray-800 ${
                currentPath === item.href || currentPath.startsWith(item.href.split('#')[0])
                  ? 'text-primary-700 bg-primary-50 dark:text-primary-400 dark:bg-gray-800'
                  : 'text-gray-700 dark:text-gray-300 hover:text-primary-700 dark:hover:text-primary-400'
              }`}
              role="button"
              aria-expanded={item.children ? "false" : undefined}
              aria-haspopup={item.children ? "true" : undefined}
            >
              <i class={`${item.icon} mr-2 text-xs`}></i>
              {item.label}
              {item.children && (
                <i class="fas fa-chevron-down ml-1 text-xs transition-transform duration-200 group-hover:rotate-180"></i>
              )}
            </a>
            
            <!-- Dropdown Menu -->
            {item.children && (
              <div class="absolute left-0 mt-2 w-64 bg-white dark:bg-gray-800 rounded-xl shadow-xl border border-gray-200 dark:border-gray-700 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                <div class="py-2">
                  {item.children.map((child) => (
                    <div class="relative group/sub">
                      <a
                        href={child.href}
                        class="flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 hover:text-primary-700 dark:hover:text-primary-400 transition-colors duration-150"
                      >
                        <i class={`${child.icon} mr-3 text-xs`}></i>
                        {child.label}
                        {child.children && (
                          <i class="fas fa-chevron-right ml-auto text-xs"></i>
                        )}
                      </a>
                      
                      <!-- Sub-dropdown -->
                      {child.children && (
                        <div class="absolute left-full top-0 ml-1 w-56 bg-white dark:bg-gray-800 rounded-lg shadow-xl border border-gray-200 dark:border-gray-700 opacity-0 invisible group-hover/sub:opacity-100 group-hover/sub:visible transition-all duration-200">
                          <div class="py-2">
                            {child.children.map((subChild) => (
                              <a
                                href={subChild.href}
                                class="flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 hover:text-primary-700 dark:hover:text-primary-400 transition-colors duration-150"
                              >
                                <i class={`${subChild.icon} mr-3 text-xs`}></i>
                                {subChild.label}
                              </a>
                            ))}
                          </div>
                        </div>
                      )}
                    </div>
                  ))}
                </div>
              </div>
            )}
          </div>
        ))}
      </div>

      <!-- Right side actions -->
      <div class="flex items-center space-x-3">
        <!-- Search button -->
        <button
          type="button"
          class="p-2 text-gray-500 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg transition-colors duration-200"
          aria-label="Buscar"
          id="search-button"
        >
          <i class="fas fa-search text-sm"></i>
        </button>

        <!-- Theme toggle -->
        <button
          type="button"
          class="p-2 text-gray-500 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg transition-colors duration-200"
          aria-label="Cambiar tema"
          id="theme-toggle"
        >
          <i class="fas fa-sun text-sm dark:hidden"></i>
          <i class="fas fa-moon text-sm hidden dark:block"></i>
        </button>

        <!-- Mobile menu button -->
        <button
          type="button"
          class="lg:hidden p-2 text-gray-500 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg transition-colors duration-200"
          aria-label="Menú de navegación"
          id="mobile-menu-button"
        >
          <i class="fas fa-bars text-lg" id="menu-icon"></i>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div class="lg:hidden hidden" id="mobile-menu">
      <div class="pt-2 pb-4 space-y-1 bg-white dark:bg-gray-900 border-t border-gray-200 dark:border-gray-700">
        {navigationItems.map((item) => (
          <div class="space-y-1">
            <a
              href={item.href}
              class={`flex items-center px-3 py-2 rounded-lg text-base font-medium transition-colors duration-200 ${
                currentPath === item.href || currentPath.startsWith(item.href.split('#')[0])
                  ? 'text-primary-700 bg-primary-50 dark:text-primary-400 dark:bg-gray-800'
                  : 'text-gray-700 dark:text-gray-300 hover:text-primary-700 dark:hover:text-primary-400 hover:bg-gray-50 dark:hover:bg-gray-800'
              }`}
            >
              <i class={`${item.icon} mr-3 text-sm`}></i>
              {item.label}
            </a>
            
            <!-- Mobile submenu -->
            {item.children && (
              <div class="pl-6 space-y-1">
                {item.children.map((child) => (
                  <a
                    href={child.href}
                    class="flex items-center px-3 py-1.5 text-sm text-gray-600 dark:text-gray-400 hover:text-primary-700 dark:hover:text-primary-400 hover:bg-gray-50 dark:hover:bg-gray-800 rounded transition-colors duration-150"
                  >
                    <i class={`${child.icon} mr-2 text-xs`}></i>
                    {child.label}
                  </a>
                ))}
              </div>
            )}
          </div>
        ))}
      </div>
    </div>
  </nav>
</header>

<!-- Scripts -->
<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');

  mobileMenuButton?.addEventListener('click', () => {
    const isHidden = mobileMenu?.classList.contains('hidden');
    
    if (isHidden) {
      mobileMenu?.classList.remove('hidden');
      menuIcon?.classList.remove('fa-bars');
      menuIcon?.classList.add('fa-times');
    } else {
      mobileMenu?.classList.add('hidden');
      menuIcon?.classList.remove('fa-times');
      menuIcon?.classList.add('fa-bars');
    }
  });

  // Theme toggle
  const themeToggle = document.getElementById('theme-toggle');
  
  themeToggle?.addEventListener('click', () => {
    const isDark = document.documentElement.classList.contains('dark');
    
    if (isDark) {
      document.documentElement.classList.remove('dark');
      localStorage.setItem('theme', 'light');
    } else {
      document.documentElement.classList.add('dark');
      localStorage.setItem('theme', 'dark');
    }
  });

  // Search functionality (placeholder)
  const searchButton = document.getElementById('search-button');
  
  searchButton?.addEventListener('click', () => {
    // TODO: Implement search modal
    console.log('Search functionality coming in Phase 3');
  });

  // Close mobile menu on link click
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    if (target.closest('a') && !mobileMenu?.classList.contains('hidden')) {
      mobileMenu?.classList.add('hidden');
      menuIcon?.classList.remove('fa-times');
      menuIcon?.classList.add('fa-bars');
    }
  });

  // Close mobile menu on outside click
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    if (!target.closest('nav') && !mobileMenu?.classList.contains('hidden')) {
      mobileMenu?.classList.add('hidden');
      menuIcon?.classList.remove('fa-times');
      menuIcon?.classList.add('fa-bars');
    }
  });
</script>

<style>
  /* Custom dropdown animations */
  .group:hover .group-hover\:opacity-100 {
    animation: fadeInUp 0.2s ease-out forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Backdrop blur fallback */
  @supports not (backdrop-filter: blur(12px)) {
    header {
      background: rgba(255, 255, 255, 0.95);
    }
    
    .dark header {
      background: rgba(17, 24, 39, 0.95);
    }
  }
</style>