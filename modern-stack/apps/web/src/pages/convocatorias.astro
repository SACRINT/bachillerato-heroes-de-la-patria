    noResults.classList.remove('hidden');
  } else {
    container.innerHTML = filteredConvocatorias.map(conv => renderConvocatoria(conv)).join('');
    noResults.classList.add('hidden');
  }
}

// Filter functions
function filterConvocatorias(categoria) {
  if (categoria === 'all') {
    filteredConvocatorias = [...convocatorias];
  } else {
    filteredConvocatorias = convocatorias.filter(conv => conv.categoria === categoria);
  }
  sortConvocatorias(document.getElementById('sortSelect').value);
  renderConvocatorias();
}

function sortConvocatorias(criteria) {
  switch (criteria) {
    case 'fecha':
      filteredConvocatorias.sort((a, b) => new Date(a.fechaLimite) - new Date(b.fechaLimite));
      break;
    case 'titulo':
      filteredConvocatorias.sort((a, b) => a.titulo.localeCompare(b.titulo));
      break;
    case 'categoria':
      filteredConvocatorias.sort((a, b) => a.categoria.localeCompare(b.categoria));
      break;
  }
  renderConvocatorias();
}

