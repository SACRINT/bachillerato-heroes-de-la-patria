  });
}

function calculateDaysRemaining(dateString) {
  const today = new Date();
  const deadline = new Date(dateString);
  const diffTime = deadline - today;
  const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
  return diffDays;
}

