# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Site Configuration
SITE_URL=https://sacrint.github.io/03-BachilleratoHeroesWeb/
BASE_PATH=/03-BachilleratoHeroesWeb

# CDN Configuration
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id_here
CLOUDFLARE_WEB_ANALYTICS_TOKEN=your_web_analytics_token_here
CDN_ENABLED=true

# API Configuration
API_BASE_URL=http://localhost:3001
API_SECRET_KEY=your-secret-key-here

# Database (if needed)
DATABASE_URL=postgresql://username:password@localhost:5432/heroes_patria

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# Social Media
FACEBOOK_PAGE_ID=your-facebook-page-id
TWITTER_USERNAME=@heroes_patria
INSTAGRAM_USERNAME=heroespatriaoficial

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=contacto@heroespatria.edu.mx
SMTP_PASS=your-email-password

# Monitoring & Performance
LIGHTHOUSE_CI_TOKEN=your-lighthouse-token
SENTRY_DSN=your-sentry-dsn

# Security
SESSION_SECRET=your-session-secret
JWT_SECRET=your-jwt-secret
ENCRYPTION_KEY=your-encryption-key

# File Upload
MAX_FILE_SIZE=5242880  # 5MB
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,webp

# Development
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info